<div class="rechargeRecord cashRecord" [ngClass]="{hide:isShowDetail}">
  <Header
    [title]="headerTitle"
    (onVoted)="back($event)">
    >
  </Header>
  <div class="grayBgBar mt80Rem"></div>
  <weui-infiniteloader (loadmore)="onLoadMore($event)">
  <ul class="rchRecList">
    <li feedButton class="rchRecItem WrapB wx"
        *ngFor = "let item of list"
        (click)="showDetail(item)">
      <div class="recLeft fl">
        <div class="rchType">
        </div>
        <div class="payStr">
          <div class="rchTypeText">
            收款账户&nbsp;{{item.cardNo}}
          </div>
          <div class="rchTime">
            {{item.withdrawTime|date:"yyyy/M/d HH:mm:ss"}}
          </div>
        </div>
      </div>
      <div class="recRight fr">
        {{item.amt}}
      </div>
    </li>
    <div class="noCon" [ngClass]="{hide:isHasOdrList}">
      没有任何内容
    </div>
    <div class="loadFinished" [ngClass]="{active:isLoaded}">
      <!--加载完毕-->
    </div>
