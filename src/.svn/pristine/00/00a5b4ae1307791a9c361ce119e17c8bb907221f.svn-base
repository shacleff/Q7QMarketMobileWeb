<div class="rechargeRecord promoteAward TradeRecordList"
  [ngClass]="{hide:isShowDetail}"
>
  <Header
    [title]="headerTitle"
    (onVoted)="back()">
    >
  </Header>
  <div class="grayBgBar mt80Rem"></div>
  <weui-infiniteloader (loadmore)="onLoadMore($event)">
  <ul class="rchRecList AwardList">

    <li feedButton (click)="toDetail(item)" class="rchRecItem AwardItem WrapB wx" *ngFor="let item of tradeList"
      [ngClass]="{
        buy:item.enType=='0',
        sale:item.enType!='0'
      }"
    >
      <div class="recLeft fl">
        <div class="rchType userPic">
          <img src="../../../assets/images/green.png" alt="">
        </div>
        <div class="payStr">
          <div class="rchTypeText">
            {{item.proName}} <span class="tradeType">({{item.enType=='0'?'市场买入':'市场卖出'}})</span>
          </div>
          <div class="rchTime">
            {{item.trTime|date:"yyyy/M/d HH:mm:ss"}}
          </div>
        </div>
      </div>
      <div class="recRight awardRight fr">
        {{item.trCnt}}
        <p>成交量</p>
      </div>
    </li>
    <div class="noCon" [ngClass]="{hide:isHasOdrList}">
      没有任何内容
    </div>
    <div class="loadFinished" [ngClass]="{active:isLoaded}">
      <!--加载完毕-->
