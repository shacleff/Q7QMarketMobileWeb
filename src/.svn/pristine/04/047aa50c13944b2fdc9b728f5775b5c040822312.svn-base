<script src="../loginRegist/regist.component.ts"></script>
<script src="alter-account/manage-account/alter-bankcard.component.ts"></script>
<div class="userCenter">
  <div class="ucHeader">
    <div feedButton routerLink="/nameAuth" class="toVerify tc">
      完善实名认证
    </div>
    <div class="baseInfo WrapB">
      <img id="userPic" class="userPic" [src]="userInfo.headerUrl||'../../assets/images/default_user_pic.png'" alt="">
      <div class="playerInfo">
        <div class="infoTop">
          <span class="userName">{{userInfo.realName}}</span>
          <span class="userId">ID：{{userInfo.id}}</span>
        </div>
        <div class="infoBot">
          <div feedButton routerLink="/goldRecharge" class="linkBtn btnRch">金币充值</div>
          <div feedButton routerLink="/goldCash" class="linkBtn btnCash">金币提现</div>
        </div>
      </div>
    </div>
    <div class="accountInfo w100">
      <div class="infoItem">
        <p class="itemTop">总额</p>
        <p class="itemBot">{{userInfo.totalBalance}}</p>
      </div>
      <div class="infoItem">
        <p class="itemTop">冻结金</p>
        <p class="itemBot">{{userInfo.blockedBalance}}</p>
      </div>
      <div class="infoItem">
        <p class="itemTop">可用金</p>
        <p class="itemBot">{{userInfo.usableBalance}}</p>
      </div>
    </div>
  </div>
  <div class="orderArea w100">
    <div feedButton routerLink="/entrustOrder" class="orderItem">
      <img src="../../assets/images/deg_order.png" alt="">
      <p>委托订单</p>
    </div>
    <div feedButton routerLink="/tradeRecord" class="orderItem">
      <img src="../../assets/images/trade_detail.png" alt="">
      <p>交易明细</p>
    </div>
    <div feedButton routerLink="/assignTradeOrder" class="orderItem">
      <img src="../../assets/images/appoint_order.png" alt="">
      <p>赠送详情</p>
    </div>
  </div>
  <div class="grayBgBar"></div>
  <div class="w100 accountRevise accountReviseTop">
    <div feedButton routerLink="/alterMobileFirst" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">修改绑定手机
    </div>
    <div feedButton routerLink="/alterLoginPassword" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">修改登陆密码
    </div>
    <div feedButton routerLink="/resetPayPassword" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">重置支付密码
    </div>
    <div feedButton routerLink="/alterBankcard" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">管理账户
    </div>
  </div>
  <div class="grayBgBar"></div>
  <div class="w100 accountRevise accountReviseBot goldArea pb80Rem">
    <div feedButton routerLink="/rechargeRecord" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">充值记录
    </div>
    <div feedButton routerLink="/cashRecord" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">提现记录
    </div>
    <div feedButton routerLink="/myGoods" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">我的物品
    </div>
    <div feedButton routerLink="/goldDetail" class="reviseItem">
      <img src="../../assets/images/center_list_mobile.png" alt="">金币明细
    </div>
    <div feedButton (click)="openProDrop()" class="reviseItem prtCenter open" [ngClass]="{
      open:isClose,
      close:!isClose
    }">
      <i class="staIcon"></i>
      <img src="../../assets/images/center_list_mobile.png" alt="">推广中心
    </div>
    <div class="prtOpen open" [ngClass]="{open:isClose}">
      <div feedButton routerLink="/promoteLink" class="prtItem">
        <img src="../../assets/images/prt_link_icon.png" alt="">
        <p>推广链接</p>
      </div>
      <div feedButton routerLink="/promoteList" class="prtItem">
        <img src="../../assets/images/prt_list_icon.png" alt="">
        <p>推广列表</p>
      </div>
      <div feedButton routerLink="/promoteAward" class="prtItem">
        <img src="../../assets/images/prt_award_icon.png" alt="">
        <p>推广奖励</p>
      </div>
    </div>
    <div class="grayBgBar"></div>
    <div feedButton class="reviseItem eixtLogin" (click)="exit()">
      退出登录
    </div>
  </div>
  <div class="footer">
    <a feedButton routerLink="/market" class="navItem">
      <div class="navIcon">

      </div>
      <p>行情</p>
    </a>
    <a feedButton (click)="toMarket()" class="navItem">
      <div class="navIcon">

      </div>
      <p>市场</p>
    </a>
    <a feedButton routerLink="/userCenter" class="navItem active">
      <div class="navIcon">

      </div>
      <p>个人</p>
    </a>
  </div>
</div>
